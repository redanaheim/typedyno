{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "preserveConstEnums": false,
        "outDir": "out",
        "esModuleInterop": true,
        "alwaysStrict": true,
        "strict": true,
        "lib": ["ES2020"],
        "downlevelIteration": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "esnext",
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
}