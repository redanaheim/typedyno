{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "outDir": "out",
        "alwaysStrict": true,
        "strict": true,
        "lib": ["ES2020"],
        "downlevelIteration": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "esnext"
    },
    "include": [
        "src/**/*"
    ],
}